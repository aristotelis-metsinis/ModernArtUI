<?xml version="1.0" encoding="utf-8"?>
<!--
 * Define application's "manifest" file, describing an "activity" component and the class that
 * implements this "activity" as well as publishing which "intent" this "activity" can handle; in
 * our case advertises an "activity" that initiates "this" application.
 *
 * author Aristotelis Metsinis (aristotelis.metsinis@gmail.com)
 * version 1.0
 * since 2015-06-04
 * see http://www.thinkageek.com/metsinis/
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="course.labs.modernartui" >

    <application
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >

        <activity
            android:name=".ModernArtUIActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
